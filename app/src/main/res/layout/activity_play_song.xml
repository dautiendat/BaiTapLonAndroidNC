<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="24dp"
    android:paddingLeft="24dp"
    android:visibility="visible"
    tools:context=".activities.PlaySongActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <ImageView
                android:id="@+id/imgToMinimizePlayer"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/chevron_left"
                android:rotation="270"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:src="@drawable/more_vert"
                app:layout_constraintRight_toRightOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="360dp"
            app:cardCornerRadius="20dp"
            >
            <ImageView
                android:id="@+id/imgSong_ActiPlaySong"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/song"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                />
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            >
            <TextView
                android:id="@+id/tvNameSong_ActiPlaySong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 25 30"
                android:textAppearance="@style/good_evening"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:id="@+id/tvNameArtist_ActiPlaySong"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Bảo Anh"
                android:ellipsize="end"
                android:textAppearance="@style/hi_username"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/favorite_icon"
                app:layout_constraintRight_toLeftOf="@id/iconDownload_ActiPlaySong"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="15dp"/>
            <ImageView
                android:id="@+id/iconDownload_ActiPlaySong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_download"
                app:layout_constraintRight_toLeftOf="@id/iconShare_ActiPlaySong"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="15dp"/>
            <ImageView
                android:id="@+id/iconShare_ActiPlaySong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_share"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <SeekBar
            android:id="@+id/seekBarSong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:thumbTint="@color/white"
            android:foregroundTint="@color/white"
            android:progressBackgroundTint="@color/color_text_artist"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/duration_song"
                android:layout_width="36dp"
                android:textAppearance="@style/duration_song"
                android:text="2:14"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/totalDuration_song"
                android:layout_width="36dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textAppearance="@style/duration_song"
                android:text="4:30"
                android:gravity="end"
                />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/RandomSong_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/random_icon"
                app:layout_constraintEnd_toStartOf="@+id/playPreSong_icon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@id/playPreSong_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/playPreSong_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/forward_icon"
                app:layout_constraintEnd_toStartOf="@+id/playSong_icon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/RandomSong_icon"
                app:layout_constraintRight_toLeftOf="@id/playSong_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/playSong_icon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/pause_icon"
                app:layout_constraintEnd_toStartOf="@+id/playNextSong_icon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/playPreSong_icon"
                app:layout_constraintRight_toLeftOf="@id/playNextSong_icon"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/playNextSong_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/forward_icon"
                android:scaleX="-1"
                app:layout_constraintEnd_toStartOf="@+id/repeatSong_icon"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/playSong_icon"
                app:layout_constraintRight_toLeftOf="@id/repeatSong_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                android:id="@+id/repeatSong_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="50dp"
                android:src="@drawable/repeat_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/playNextSong_icon"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvContinue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_text_artist"
                android:textSize="20sp"
                android:text="Tiếp theo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_ActiPlaySong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvContinue"
                app:layout_constraintLeft_toLeftOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>