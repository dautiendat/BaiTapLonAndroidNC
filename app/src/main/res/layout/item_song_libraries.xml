<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/padding">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/imgSong_libraries"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/song"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/nameSong_libraries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 25 30"
        android:textColor="@color/white"
        style="@style/text_song"
        app:layout_constraintLeft_toRightOf="@id/cardView"
        app:layout_constraintTop_toTopOf="@id/cardView"/>
    <TextView
        android:id="@+id/nameArtist_libraries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Báº£o Anh"
        android:textColor="@color/color_text_artist"
        style="@style/text_song"
        app:layout_constraintLeft_toRightOf="@id/cardView"
        app:layout_constraintTop_toBottomOf="@id/nameSong_libraries"/>
    <View
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/more_vert"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>